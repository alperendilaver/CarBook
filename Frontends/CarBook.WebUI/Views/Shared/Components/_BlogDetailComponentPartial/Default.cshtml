@model BlogDetailDTO
<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">

            <div class="col-md-8 ftco-animate">
                <h2 class="mb-3">@Model.title</h2>
                <p>sadsadas</p>
                <p>
                    <img src="@Model.coverImageUrl" alt="" class="img-fluid">
                </p>
                
                @await Component.InvokeAsync("_BlogTagCloudComponentPartial")
                <div class="about-author d-flex p-4 bg-light">
                    <div class="bio mr-5">
                        <img src="images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4">
                    </div>
                    <div class="desc">
                        <h3>@Model.authorName</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                    </div>
                </div>


                <div class="pt-5 mt-5">
                    @await Component.InvokeAsync("_GetAllCommentsPartialView")  
                    @await Component.InvokeAsync("_CreateCommentPartialView")
                </div>
                </div>
            <div class="col-md-4 sidebar ftco-animate">
                @await Component.InvokeAsync("_SideBarCategoriesComponentPartial")

                @await Component.InvokeAsync("_SidebarLastBlogsComponentPartial")
                @await Component.InvokeAsync("_SidebarTagCloudComponentPartial")
                @await Component.InvokeAsync("_SidebarParagraphComponentPartial")
            </div>

        </div>
    </div>
</section> <!-- .section -->
